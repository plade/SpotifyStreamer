<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_results_tracks_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:listPreferredItemHeight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_results_tracks_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_results_tracks_trackName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:text="Track Name Here"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_results_tracks_albumName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="Album Name Here"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>